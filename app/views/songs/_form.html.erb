<%= simple_form_for([@album, @song]) do |f| %>
<fieldset class="edit-form">
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :index %>
  <%= f.input :url %>
  <%= f.input :info, :as => :text, :input_html => { :rows => "4" } %>
  <%= f.input :lyrics, :as => :text, :input_html => { :rows => "8" } %>
  <% if @song.photo %>
  <div class="row">
  <div class="col-sm-6 col-md-3">
    <a href="#" class="thumbnail">
      <img src="<%= @song.photo.preview %>">
    </a>
  </div>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit '保存', :class => "btn btn-default", :disable_with => '保存中' %>
    或者
    <%= link_to '返回', song_path %>
  </div>
</fieldset>
<% end %>