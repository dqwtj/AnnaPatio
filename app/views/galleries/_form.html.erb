<%= simple_form_for([@gallery]) do |f| %>
<fieldset class="edit-form">
  <%= f.error_notification %>
  <%= f.input :title %>
  <%= f.input :body, :as => :text, :input_html => { :rows => "8" } %>
  <%= f.input :is_design, :as => :boolean %>
  <div class="row">
  <% @gallery.photos.each do |photo| %>
  <div class="col-sm-6 col-md-3">
    <a href="#" class="thumbnail">
      <img src="<%= photo.preview %>">
    </a>
  </div>
  <% end %>
</div>

  <div class="actions">
    <%= f.submit '保存', :class => "btn btn-default", :disable_with => '保存中' %>
    或者
    <%= link_to '返回', poems_path %>
  </div>
</fieldset>
<% end %>