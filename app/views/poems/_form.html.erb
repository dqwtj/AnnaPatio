<%= simple_form_for([@poem]) do |f| %>
<fieldset class="edit-form">
  <%= f.error_notification %>
  <%= f.input :title %>
  <%= f.input :is_poem, :as => :boolean %>
  <%= f.input :url %>
  <%= f.input :body, :as => :text, :input_html => { :rows => "8" } %>
  <div class="actions">
    <%= f.submit '保存', :class => "btn btn-default", :disable_with => '保存中' %>
    或者
    <%= link_to '返回', poems_path %>
  </div>
</fieldset>
<% end %>